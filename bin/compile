#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail immediately on non-zero exit code.
set -e
# Fail immediately on non-zero exit code within a pipeline.
set -o pipefail
# Fail on undeclared variables.
set -u
# Debug, echo every command
#set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
BP_DIR=`cd $(dirname $0); cd ..; pwd`

export_env_dir() {
  local env_dir=$1
  local whitelist_regex=${2:-''}
  local blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH|IFS)$'}
  if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
      echo "$e" | grep -E "$whitelist_regex" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
      :
    done
  fi
}

cd $BUILD_DIR

# Set-up env var replacement in generated index file
if [ -f "mustache_templates.conf" ]; then
  echo '       Using existing `mustache_templates.conf`'
else
  echo '       Writing `mustache_templates.conf` to support create-react-app'
  echo "build/index.html" > mustache_templates.conf
fi

# Set the web root to the build/ directory
if [ -f "static.json" ]
then
  echo '       Using existing `static.json`'
else
  echo '       Writing `static.json` to support create-react-app'
  echo '{ "root": "build/" }' > static.json
fi

# Support env vars during build:
# * `REACT_APP_*`
#   * https://github.com/facebookincubator/create-react-app/blob/v0.2.3/template/README.md#adding-custom-environment-variables
# * `NODE_*`, especially for `NODE_PATH`
#   * https://github.com/facebookincubator/create-react-app/pull/476
export_env_dir "$ENV_DIR" '^(REACT_APP_|NODE_)'

# Build the javascript bundle
npm run build
